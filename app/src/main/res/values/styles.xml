<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="primary">#424242</color>
    <color name="primary_dark">#212121</color>
    <color name="primary_light">#ffffff</color>
    <color name="primary_light_dark">#e0e0e0</color>
    <color name="accent">#ffc400</color>
    <color name="accent_complementary">#304ffe</color>

    <!-- Default theme is dark -->
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="background">@color/primary_dark</item>
        <item name="defaultText">@android:color/white</item>
        <item name="authorDateText">#e0e0e0</item>
        <item name="colorControlHighlight">@color/accent</item> 
        <item name="colorAccent">@color/accent</item>
        <item name="articleHeaderGradient">#88333333</item>
        <item name="colorBackgroundDrawer">@color/primary</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="rippleEffect">@color/primary_light_dark</item>
    </style>

    <item name="fab_interpolator" type="interpolator">@android:interpolator/decelerate_cubic</item>

    <!-- Alternate theme is light -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_light</item> 
        <item name="colorPrimaryDark">@color/primary_light_dark</item> 
        <item name="background">@color/primary_light_dark</item>
        <item name="defaultText">@android:color/black</item>
        <item name="authorDateText">#212121</item>
        <item name="colorControlHighlight">#ffab00</item> 
        <item name="colorAccent">#ffab00</item>
        <item name="articleHeaderGradient">#88eeeeee</item>
        <item name="colorBackgroundDrawer">@color/primary_light_dark</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/black</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="rippleEffect">@color/primary_dark</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <!-- Colors for the drawer -->
    <color name="cat_color_news">#FFC600</color>
    <color name="cat_color_news_dark">#ffab00</color>
    <color name="cat_color_international">#0386C3</color>
    <color name="cat_color_politics">#1F0D67</color>
    <color name="cat_color_society">#D50303</color>
    <color name="cat_color_economy">#FE2F2F</color>
    <color name="cat_color_culture">#F20559</color>
    <color name="cat_color_ideas">#464F57</color>
    <color name="cat_color_planet">#30932E</color>
    <color name="cat_color_sports">#30932E</color>
    <color name="cat_color_sciences">#0CB4AE</color>
    <color name="cat_color_pixels">#06B586</color>
    <color name="cat_color_campus">#FF6E17</color>
    <color name="cat_color_decoders">#1F0D67</color>

    <!-- Colors for the custom category "Les Décodeurs" -->
    <color name="tag_green">#00c853</color>
    <color name="tag_red">#f44336</color>
    <color name="tag_yellow">#ff9800</color>
    <color name="tag_grey">#212121</color>
</resources>
