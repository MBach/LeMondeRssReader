<resources>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <item name="colorAccent">@color/accent</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <color name="primary">#616161</color>
    <color name="primary_dark">#212121</color>
    <color name="accent">#ffc400</color>
    <color name="accent_translucent">#FFFFC43B</color>

    <color name="tag_green">#00c853</color>
    <color name="tag_red">#f44336</color>
    <color name="tag_yellow">#ff9800</color>
    <color name="tag_grey">#212121</color>



</resources>
