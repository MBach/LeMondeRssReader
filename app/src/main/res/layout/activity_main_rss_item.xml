<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rss_image"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:contentDescription="@string/image_from_article"
            android:scaleType="centerCrop"
            android:background="?attr/colorPrimaryDark"
            android:transitionName="@string/transition_open_article" tools:targetApi="LOLLIPOP"/>

        <TextView
            android:id="@+id/rss_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/spacing_medium"
            android:background="?attr/colorPrimaryDark"
            android:textColor="?attr/android:textColorPrimary" />

    </LinearLayout>

</FrameLayout>
